{
  "name": "restaurant-music-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Aplicación interactiva para peticiones musicales en restaurantes",
  "author": "Bryan Muñoz",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{js,jsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,md}\"",
    "clean": "rm -rf dist node_modules/.vite",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "vite": "^4.4.5",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "keywords": [
    "react",
    "music",
    "restaurant",
    "interactive",
    "playlist",
    "spotify",
    "tailwindcss",
    "responsive"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}